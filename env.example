# Oculus Project Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_PROFILE=default

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=your-rds-proxy-endpoint.region.proxy.rds.amazonaws.com
DB_PORT=5432
DB_NAME=oculus_db
DB_USER=oculus_user
DB_SECRET_ARN=arn:aws:secretsmanager:region:account:secret:oculus-db-secret

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_API_URL=https://your-api-gateway-url.execute-api.region.amazonaws.com/prod
NEXT_PUBLIC_APP_NAME=Oculus

# =============================================================================
# Development Configuration
# =============================================================================
DEVELOPER_PUBLIC_IP=your-current-public-ip
BASTION_HOST_IP=your-bastion-host-public-ip
BASTION_HOST_KEY_PATH=path/to/your/bastion-key.pem

# =============================================================================
# CDK Configuration
# =============================================================================
CDK_DEFAULT_ACCOUNT=your-aws-account-id
CDK_DEFAULT_REGION=us-east-1

# =============================================================================
# Optional: Monitoring & Logging
# =============================================================================
LOG_LEVEL=info
ENABLE_CLOUDWATCH_LOGS=true
ENABLE_XRAY_TRACING=false

# =============================================================================
# Security Configuration
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,https://your-cloudfront-domain.cloudfront.net
CORS_ENABLED=true
