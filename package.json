{
  "name": "oculus",
  "version": "1.0.0",
  "description": "Full-stack AWS application with CDK infrastructure, Next.js frontend, and Lambda backend",
  "private": true,
  "workspaces": [
    "cdk",
    "app",
    "lambdas"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:cdk": "cd cdk && npm run build",
    "build:app": "cd app && npm run build",
    "deploy:infra": "cd cdk && npm run deploy-infra",
    "deploy:app": "cd cdk && npm run deploy-app",
    "deploy:lambda": "cd cdk && npm run deploy-lambda",
    "delete:infra": "cd cdk && npm run delete-infra",
    "inventory": "cd cdk && npm run inventory",
    "dev:app": "cd app && npm run dev",
    "start:app": "cd app && npm run start",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "setup": "ts-node scripts/setup-project.ts",
    "clean": "npm run clean:workspaces",
    "clean:workspaces": "npm run clean --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "dependencies": {
    "@aws-sdk/client-rds": "^3.874.0",
    "@aws-sdk/client-secrets-manager": "^3.873.0",
    "aws-cdk-lib": "^2.151.0",
    "aws-sdk": "^2.1692.0",
    "constructs": "^10.3.0",
    "inquirer": "^12.9.3",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.24",
    "esbuild": "^0.21.5",
    "next": "^14.2.32",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "aws",
    "cdk",
    "nextjs",
    "lambda",
    "rds",
    "infrastructure"
  ],
  "author": "Oculus Team",
  "license": "UNLICENSED"
}
